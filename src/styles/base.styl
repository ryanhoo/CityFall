
/* custom CSS 蓝色258797 红色EA8261 紫色B3756B 绿色36C289  */
body 
  // background: #000000 url(http://cityfall.b0.upaiyun.com/cover/bg.jpg) repeat fixed
  background-size: cover
  color: #ffffff
  font-size: 14px
  font-family: "Helvetica Neue", Helvetica, "Hiragino Sans GB", STHeiti, "WenQuanYi Micro Hei", \5FAE\8F6F\96C5\9ED1, arial, sans-serif
  line-height: 1.692307em
  margin-bottom: 1.692307em
  -webkit-animation: myfirst 30s linear infinite
  -o-animation: myfirst 30s linear infinite
  text-align: center

a 
  text-decoration: none
  color: #e5e5e5

#site_player 
   margin: 70px auto

#site_bulletion 
  color: #ffffff

  .site-motto
    color: #ffffff
    font-size: 16px

  .site-desc
    margin-top: 30px
    color: #e5e5e5
    font-size: 12px
    text-shadow: #999999 0px 0px 1px

#socialshare 
  margin: 0 auto
  padding-top: 35px
  display: table

#footer 
  margin: 0 auto
  padding-top: 40px
  display: table
  color: #e5e5e5

#footer ul 
  padding-left: 0

#footer ul li 
  display: inline
  font-size: 15px

#comment 
  margin: 70px auto
  display: table
  width: 650px

#comment-display 
  display: none

#about 
  width: 650px
  font-size: 15px
  margin: 70px auto
  color: #EAEAEA

  .author
    margin-bottom: 50px

    // .author-name
    //   margin-top: 20px
    //   margin-bottom: 10px

    .author-contacts
      margin-top: 20px
  
  .change-log
    margin-bottom: 30px

.amazingaudioplayer-engine, .amazingaudioplayer-audios
  display: none

#site_player
  #amazingaudioplayer-1
    display:block
    position:relative
    width:300px
    height:300px
    margin:0px auto 0px

.link-group
  a
    &::before,::after
      content: '|'
      margin-left: 10px
      margin-right: 10px
      padding: 0

    &:first-of-type::before
      content: ''
      margin-left: 0px
      margin-right: 0px

    &:last-of-type::after
      content: ''
      margin-right: 0px
      margin-left: 0px

// 多说
#ds-thread #ds-reset li.ds-post,
#ds-thread #ds-reset .ds-account-control span, 
.ds-account-control span, 
.ds-visitor.ds-visitor-name,
.ds-toolbar .ds-account-control span,
.ds-toolbar .ds-visitor a.ds-visitor-name,
#ds-thread #ds-reset a.ds-visitor-name,
#ds-thread #ds-reset div.ds-account-control span,
.ds-tab .ds-comments-tab-weibo span.ds-highlight,
.ds-tab .ds-comments-tab-weibo span.ds-highlight span.ds-highlight,
#ds-thread #ds-reset .ds-paginator a.ds-current
  color: white !important

#ds-thread #ds-reset .ds-sort a,
#ds-thread #ds-reset .ds-powered-by a,
#ds-thread #ds-reset .ds-paginator a,
#ds-thread #ds-reset .ds-header
  color: #e5e5e5 !important

// Mobile (portrait) 
@media only screen and (max-width: 767px) 
  #site_player 
    margin: 20px auto
    
  #footer 
    margin: 0 auto
    padding-top: 10px
    display: table

  #comment 
    margin: 20px auto
    display: table
    width: 300px

  #about 
    width: 300px
    font-size: 15px
    margin: 70px auto
    color: #EAEAEA

  // /* 滚动条 */
  ::-webkit-scrollbar 
    width:10px
    margin-right:2px

  ::-webkit-scrollbar-track-piece 
    background-color:#F5F5F5
    border-left:1px solid #D2D2D2

  ::-webkit-scrollbar-thumb 
    background:#CBCBCB
    width:10px

  ::-webkit-scrollbar-thumb:hover 
    background:#808080
